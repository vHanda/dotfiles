#!/usr/bin/env python3

import sys
import time

start_time = time.time()

try:
    elapsed_time = time.time() - start_time
    sys.stdout.buffer.write(f"\033[90m{elapsed_time:.2f}  -- BEGIN\033[0m\n".encode())
    sys.stdout.buffer.flush()

    while True:
        line = sys.stdin.buffer.readline()
        if not line:
            break
        elapsed_time = time.time() - start_time
        sys.stdout.buffer.write(f"\033[90m{elapsed_time:.2f}>\033[0m ".encode())
        sys.stdout.buffer.write(line)
        sys.stdout.buffer.flush()
except KeyboardInterrupt:
    pass
finally:
    elapsed_time = time.time() - start_time
    sys.stdout.buffer.write(f"\033[90m{elapsed_time:.2f}  -- END\033[0m\n".encode())
    sys.stdout.buffer.flush()
